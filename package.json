{
  "name": "warcraft-vscode",
  "displayName": "warcraft-vscode",
  "description": "A Warcraft III map develop toolset",
  "version": "0.0.10",
  "publisher": "Dencer",
  "license": "SEE LICENSE IN LICENSE.md",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/warcraft-iii/warcraft-vscode.git"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.warcraft.compile.debug",
    "onCommand:extension.warcraft.map.pack",
    "onCommand:extension.warcraft.run.game",
    "onCommand:extension.warcraft.run.we",
    "onCommand:extension.warcraft.library.add",
    "onCommand:extension.warcraft.option.open",
    "onCommand:extension.warcraft.project.clean"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.warcraft.compile.debug",
        "title": "Warcraft: Compile Debug"
      },
      {
        "command": "extension.warcraft.map.pack",
        "title": "Warcraft: Pack Map"
      },
      {
        "command": "extension.warcraft.run.game",
        "title": "Warcraft: Run Map"
      },
      {
        "command": "extension.warcraft.run.we",
        "title": "Warcraft: Open World Editor"
      },
      {
        "command": "extension.warcraft.library.add",
        "title": "Warcraft: Add Library"
      },
      {
        "command": "extension.warcraft.project.clean",
        "title": "Warcraft: Clean"
      },
      {
        "command": "extension.warcraft.option.open",
        "title": "Warcraft: Advance options"
      }
    ],
    "configuration": {
      "title": "Warcraft",
      "properties": {
        "warcraft.gamePath": {
          "type": "string",
          "description": "Where is Warcraft III Execution?"
        },
        "warcraft.wePath": {
          "type": "string",
          "description": "Where is World Editor Execution?"
        },
        "warcraft.allowAddSshLibrary": {
          "type": "boolean",
          "description": "Whether to allow the SSH libraries?"
        },
        "warcraft.gameArgs": {
          "type": "array",
          "description": "Arguments to added to run the game."
        },
        "warcraft.weArgs": {
          "type": "array",
          "description": "Arguments to added to run the world editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.1.0",
    "@types/lodash": "^4.14.126",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "ts-loader": "^6.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "@octokit/rest": "^16.25.0",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.11"
  }
}
