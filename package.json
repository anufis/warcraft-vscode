{
  "name": "warcraft-vscode",
  "displayName": "warcraft-vscode",
  "description": "A Warcraft III map develop toolset",
  "version": "0.0.4",
  "publisher": "DengSir",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/warcraft-iii/warcraft-vscode.git"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.warcraft.compile.debug",
    "onCommand:extension.warcraft.pack",
    "onCommand:extension.warcraft.run.game",
    "onCommand:extension.warcraft.run.we",
    "onCommand:extension.warcraft.library.add"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.warcraft.compile.debug",
        "title": "Warcraft: Compile Debug"
      },
      {
        "command": "extension.warcraft.pack",
        "title": "Warcraft: Pack Map"
      },
      {
        "command": "extension.warcraft.run.game",
        "title": "Warcraft: Run Map"
      },
      {
        "command": "extension.warcraft.run.we",
        "title": "Warcraft: Open World Editor"
      },
      {
        "command": "extension.warcraft.library.add",
        "title": "Warcraft: Add Library"
      }
    ],
    "configuration": {
      "title": "Warcraft",
      "properties": {
        "warcraft.gamePath": {
          "type": "string",
          "description": "Where is Warcraft III Execution?"
        },
        "warcraft.wePath": {
          "type": "string",
          "description": "Where is World Editor Execution?"
        },
        "warcraft.allowAddSshLibrary": {
          "type": "boolean",
          "description": "Whether to allow the SSH libraries?"
        },
        "warcraft.gameArgs": {
          "type": "array",
          "description": "Arguments to added to run the game."
        },
        "warcraft.weArgs": {
          "type": "array",
          "description": "Arguments to added to run the world editor"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mkdirp-promise": "^5.0.0",
    "@types/mocha": "^2.2.42",
    "@types/mz": "0.0.32",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "@octokit/rest": "^16.25.0",
    "mkdirp-promise": "^5.0.1",
    "mz": "^2.7.0"
  }
}
